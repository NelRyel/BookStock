<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="768" Width="1024" MinHeight="768" MinWidth="1024" MaxHeight="1028" MaxWidth="1920">
    <Window.Resources>

        <Style TargetType="RadioButton">

        </Style>
    </Window.Resources>
    <Grid ShowGridLines="True">

        <Grid.RowDefinitions>
            <RowDefinition Height="10*">
            </RowDefinition>
            <RowDefinition Height="57*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="dataGrid1" Grid.Row="1" Grid.ColumnSpan="4" Visibility="Visible">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID"></DataGridTextColumn>
                <DataGridTextColumn Header="BarCode"></DataGridTextColumn>
                <DataGridTextColumn Header="Book Title"></DataGridTextColumn>
                <DataGridTextColumn Header="Price"> </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <RadioButton GroupName="mainChose" Grid.Row="0" Grid.Column="0" Margin="10 5 10 80" Content="Журнал Расходных"/>
        <RadioButton GroupName="mainChose" Grid.Row="0" Grid.Column="1" Margin="10 5 10 80" Content="Журнал Приходных"></RadioButton>
        <RadioButton GroupName="mainChose" Grid.Row="0" Grid.Column="2" Margin="10 5 10 80" Content="Номенклатура" Checked="RadioButton_Checked"></RadioButton>
        <RadioButton GroupName="mainChose" Grid.Row="0" Grid.Column="3" Margin="10 5 10 80" Content="Контрагенты" Checked="RadioButton_Checked_1"></RadioButton>

        <Button x:Name="AddSelDocBtn" Grid.Row="0" Grid.Column="0" Margin="10,65,184,25" Width="60" Height="20" >add sell</Button>
        <Button x:Name="AddPurDocBtn" Grid.Row="0" Grid.Column="0" Margin="75,65,119,25" Width="60" Height="20" >add pur</Button>
        <Button x:Name="DelDocBtn" Grid.Row="0" Grid.Column="0" Margin="209,65,10,25" Width="35" Height="20" >del</Button>

        <Button x:Name="AddBookBtn" Grid.Row="0" Grid.Column="2" Width="60" Height="20" Margin="10,80,184,10" >Add Book</Button>
        <Button x:Name="EditBookBtn" Grid.Row="0" Grid.Column="2" Width="60" Height="20" Margin="75,80,119,10" >Edit Book</Button>
        <Button x:Name="DelBookBtn" Grid.Row="0" Grid.Column="2" Width="60" Height="20" Margin="184,80,10,10" >Del Book</Button>

        <Button x:Name="AddCustBtn" Grid.Row="0" Grid.Column="3" Width="60" Height="20" Margin="10,80,184,10" >Add Cust</Button>
        <Button x:Name="EditCustBtn" Grid.Row="0" Grid.Column="3" Width="60" Height="20" Margin="75,80,119,10" >Edit Cust</Button>
        <Button x:Name="DelCustBtn" Grid.Row="0" Grid.Column="3" Width="60" Height="20" Margin="184,80,10,10" >Del Cust</Button>


    </Grid>

</Window>
